{
    "manifest_version": 3,
    "name": "MH-",
    "description": "Degrading the Minehut experience since '23.",
    "version": "1.1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/mhminus.png"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "mhminus@honkling.me",
            "strict_min_version": "55.0"
        }
    },
    "permissions": [
        "storage",
        "webNavigation",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://minehut.com/",
        "https://minehut.com/"
    ]
}
